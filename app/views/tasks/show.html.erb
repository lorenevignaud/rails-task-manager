<h1><%= @task.title %></h1>
<p><%= @task.details %></p>

  <% if @task.completed == true %>
  <p> <i class="far fa-check-square"></i>This task is completed </p>
   <% else  %>
    <p> <i class="far fa-square"></i>This task is not completed </p>
  <% end %>
 </p>

<%= link_to "Back to list", tasks_path %>

<%= link_to "Edit the task", edit_task_path, class:"btn btn-primary" %>

<%= link_to "Delete task", task_path, method: :delete, class:"btn btn-danger" %>



